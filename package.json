{
  "name": "transcargo",
  "version": "1.0.0",
  "description": "Application de gestion de cargaisons maritimes, aériennes et routières",
  "main": "server.js",
  "scripts": {
    "start": "node init-data.js && node server.js",
    "dev": "node server.js",
    "stop": "pkill -f 'node server.js' || true",
    "restart": "npm run stop && sleep 1 && npm start",
    "ts-start": "node dist/server.js",
    "ts-dev": "ts-node src/server.ts",
    "build": "npm install",
    "watch": "tsc --watch",
    "dev:watch": "nodemon server.js",
    "init": "node init-data.js",
    "check-deploy": "node check-deploy.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "cargo",
    "shipping",
    "logistics",
    "transportation"
  ],
  "author": "TransCargo Team",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "twilio": "^5.8.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.9",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
