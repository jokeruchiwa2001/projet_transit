# Configuration pour le déploiement
# Copiez ce fichier vers .env et remplissez les valeurs

# Google Maps API Key (obligatoire pour le déploiement)
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE

# Configuration du serveur
PORT=3005
NODE_ENV=production

# Configuration de l'application
APP_NAME=TransCargo
APP_URL=https://votre-domaine.com

# Sécurité
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# Configuration messagerie
EMAIL_USER=votre-email@gmail.com
EMAIL_PASS=votre-mot-de-passe-app-gmail

# Configuration Twilio (SMS réels)
TWILIO_ACCOUNT_SID=votre_account_sid_ici
TWILIO_AUTH_TOKEN=votre_auth_token_ici
TWILIO_PHONE=+1234567890
